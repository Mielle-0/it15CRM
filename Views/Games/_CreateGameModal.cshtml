@model Game

<div class="modal-header">
    <h5 class="modal-title">@ViewData["Title"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="AppId" class="form-label">App ID</label>
            <input asp-for="AppId" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="AppName" class="form-label">Name</label>
            <input asp-for="AppName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Genre" class="form-label">Genre</label>
            <input asp-for="Genre" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ReleaseDate" class="form-label">Release Date</label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Developer" class="form-label">Developer</label>
            <input asp-for="Developer" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Publisher" class="form-label">Publisher</label>
            <input asp-for="Publisher" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Source" class="form-label">Source</label>
            <input asp-for="Source" class="form-control" />
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Add Game</button>
    </div>
</form>
