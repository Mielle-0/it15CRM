@{
    ViewData["Title"] = "Admin Settings";
}

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">‚öôÔ∏è Admin Settings</h2>
    </div>

    <!-- User Roles -->
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">üë• Manage User Roles</h5>
            <form asp-controller="Admin" asp-action="UpdateRoles" method="post" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="userName" class="form-control" placeholder="Username" required />
                </div>
                <div class="col-md-5">
                    <select name="role" class="form-select" required>
                        <option value="">Select Role...</option>
                        <option value="Admin">Admin</option>
                        <option value="Analyst">Analyst</option>
                        <option value="Viewer">Viewer</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa fa-user-shield"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- API Settings -->
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">üîå API & Data Source Connections</h5>
            <form asp-controller="Admin" asp-action="UpdateApi" method="post" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="endpoint" class="form-control" placeholder="API Endpoint" required />
                </div>
                <div class="col-md-5">
                    <input type="text" name="apiKey" class="form-control" placeholder="API Key" required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-warning w-100">
                        <i class="fa fa-plug"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Alert Thresholds -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">‚ö° Sentiment Thresholds</h5>
            <form asp-controller="Admin" asp-action="UpdateThreshold" method="post" class="row g-3">
                <div class="col-md-10">
                    <input type="number" step="0.01" name="threshold" class="form-control" placeholder="e.g. 0.25" required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="fa fa-bell"></i> Set
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Feedback Alerts -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info mt-4">@TempData["Message"]</div>
    }
</div>
