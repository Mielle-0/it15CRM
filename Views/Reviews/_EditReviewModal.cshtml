@model Review

<div class="modal-header">
    <h5 class="modal-title">Edit Review</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReviewId" />

    <div class="modal-body">

        <div class="mb-3">
            <label asp-for="GameId" class="form-label">Game</label>
            <select asp-for="GameId" class="form-select" asp-items="@(new SelectList(ViewBag.Games, "GameId", "AppName", Model.GameId))">
                <option value="">-- Select Game --</option>
            </select>
            <span asp-validation-for="GameId" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="ReviewText" class="form-label">Review Text</label>
            <textarea asp-for="ReviewText" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="ReviewScoreNumeric" class="form-label">Score</label>
            <input asp-for="ReviewScoreNumeric" type="number" step="0.1" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ReviewRecommendation" class="form-label">Recommendation</label>
            <select asp-for="ReviewRecommendation" class="form-select">
                <option value="">-- Select --</option>
                <option value="true" selected="@(Model.ReviewRecommendation == true)">Recommended</option>
                <option value="false" selected="@(Model.ReviewRecommendation == false)">Not Recommended</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="ReviewVotes" class="form-label">Votes</label>
            <input asp-for="ReviewVotes" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ReviewDate" class="form-label">Date</label>
            <input asp-for="ReviewDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ReviewerId" class="form-label">Reviewer</label>
            <input asp-for="ReviewerId" class="form-control" />
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update</button>
    </div>
</form>
