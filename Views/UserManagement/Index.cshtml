@model IEnumerable<AmazonReviewsCRM.Models.User>

<h2>Users</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Create New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>@u.Active</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@u.UserId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@u.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
